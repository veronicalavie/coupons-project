<%- include ('./partials/header') %>

<div class= "container">

		<h1 style= "text-align:center;">
			Create a New Coupon
		</h1>
		<div style= "width:30%; margin:25px auto;">
			<form action="/coupons" method="POST">
				<div class= "form-group">
					<input class= "form-control" type="text" name="coupon[couponName]" placeholder="name">
				</div>
				<div class= "form-group">
					<input class= "form-control" type="text" name="coupon[validUntil]" placeholder="expiration date">
				</div>
				<div class= "form-group">
					<textarea class="form-control"  name="coupon[description]" rows="3"></textarea>
				</div>
				<div class= "form-group">
					<input class= "form-control" type="text" name="coupon[cost]" placeholder="costed">
				</div>
				<div class= "form-group">
					<input class= "btn btn-md btn-info" type="submit">
				</div>
			</form>
		</div>
</div>

<%- include ('./partials/footer') %>
